<WeatherDashboard>:
    spacing: 4
    orientation: 'vertical'
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'wether-photos/sunny.jpg' 
    BoxLayout:
        size_hint: (1, 0.2)
        Label:
            size_hint: (0.9, 1)
            font_size: 48
            text: "Weather App"
        Button:
            size_hint: (0.1, 1)
            text: "setting"
            background_normal: 'icons/setting-148.png'
    BoxLayout:
        size_hint: (1, 0.8)
        orientation: 'vertical'
        canvas:

            Color:
                rgba: (0, 0, 0, 0.6)
            Rectangle:
                pos: (self.center_x - self.width * 0.4, self.center_y * 0.4)
                size: (self.width * 0.8, self.height * 0.8)
        Image:
            source: "icons/cloudy-256.png"
        BoxLayout:
            Label:
                text: 'location'
                font_size: 32
            Label:
                font_size: 24
                text: 'Temperature: ' + str(root.degree) 
            Label:
                font_size: 24
                text: 'Humidity: ' + str(root.humid) + '%'

